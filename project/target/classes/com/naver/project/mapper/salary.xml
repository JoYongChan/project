  		dependent60=#{dependent60,jdbcType=INTEGER},
  		disabled=#{disabled,jdbcType=INTEGER},
  		womanpower=#{womanpower,jdbcType=INTEGER},
  		pay=#{pay,jdbcType=INTEGER},
  		extra=#{extra,jdbcType=INTEGER},
